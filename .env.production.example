# OpenThreat Production Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://openthreat:CHANGE_ME_STRONG_PASSWORD@postgres:5432/openthreat
POSTGRES_DB=openthreat
POSTGRES_USER=openthreat
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis
REDIS_URL=redis://redis:6379

# Application
LOG_LEVEL=INFO
API_URL=https://api.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security (Optional)
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# External APIs (Optional)
NVD_API_KEY=
GITHUB_TOKEN=

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Email (Optional - for alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=hoodinformatik@gmail.com
